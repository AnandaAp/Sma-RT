<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/white"
    android:elevation="6dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDaftarproduk"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBarang"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="4dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"
                tools:ignore="ContentDescription,MissingConstraints" />

            <TextView
                android:id="@+id/tv_namabarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Beras Pandan Wangi"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageBarang"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_hargabarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 14.000/kg"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_namabarang"
                app:layout_constraintTop_toBottomOf="@+id/tv_namabarang" />

            <TextView
                android:id="@+id/tv_namatoko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Warung Bu Somad"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_hargabarang"
                app:layout_constraintTop_toBottomOf="@+id/tv_hargabarang" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>