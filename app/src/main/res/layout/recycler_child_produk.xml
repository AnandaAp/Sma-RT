<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/imageprodukchild"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/gambargula"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namaprodukchild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gula gulaku"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"/>

        <TextView
            android:id="@+id/jumlahprodukchild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"/>

        <TextView
            android:id="@+id/hargaprodukchild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rp 31.800"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#EBDFDF"/>
    </LinearLayout>





</LinearLayout>