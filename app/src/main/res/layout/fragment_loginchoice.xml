<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.loginchoiceFragment"
    android:background="@drawable/loginchoice"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logosmart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/logowhite" />

        <ImageView
            android:id="@+id/logowelcome"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logosmart"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="30dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/welcomeillustration" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containersec"
        android:layout_width="match_parent"
        android:layout_height="431dp"
        >

        <Button
            android:id="@+id/btnrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btnrt"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnwarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnrt"
            android:layout_alignStart="@+id/btnrt"
            android:background="@drawable/btnwarga"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>