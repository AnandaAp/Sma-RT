<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/bg_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvBayarTagihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Bayar Tagihan"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tvKonfirmBayarTagihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Anda yakin ingin membayar tagihan?"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/btn_batal"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_roundedborder"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="Batal"
                    android:textColor="@color/green" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btn_ok"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_rounded"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>






    </androidx.cardview.widget.CardView>
</RelativeLayout>