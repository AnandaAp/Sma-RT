<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/bg_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_keluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Kirim Alasan"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_maukeluar"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Kenapa Persuratan Ditolak? Tolong Tuliskan Alasannya"
                android:textAlignment="center"
                android:textSize="14sp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TILalasanTolak"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAlasanTolak"
                    android:layout_width="250dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:background="@drawable/round"
                    android:padding="2dp"
                    android:paddingStart="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btn_ok"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_rounded"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="Kirim"
                    android:textColor="@color/white" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>