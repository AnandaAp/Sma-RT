<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".view.RegisterWarga">

    <ImageView
        android:id="@+id/logosmart"
        android:layout_width="167dp"
        android:layout_height="66dp"
        android:src="@drawable/logo"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="815dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapebackgroundlogin"
        app:layout_constraintTop_toBottomOf="@+id/logosmart"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-202dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_biodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat"
                android:text="Biodata"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.298"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_namalengkap"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/shapebutton"
                android:hint="Masukkan nama lengkap anda"
                android:textSize="14sp"
                android:inputType="textCapWords"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_biodata"/>

            <Spinner
                android:id="@+id/et_jeniskelamin"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/style_spinner"
                android:hint="Jenis Kelamin"
                android:entries="@array/jenis_kelamin"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_namalengkap"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="Email"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_jeniskelamin"/>

            <EditText
                android:id="@+id/et_handphone"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="No Handphone"
                android:textSize="14sp"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="Password"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_handphone"/>

            <EditText
                android:id="@+id/et_confirmpass"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="Confirm Password"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_password"/>

            <EditText
                android:id="@+id/et_idkeluarga"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="ID Keluarga"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_confirmpass"/>

            <EditText
                android:id="@+id/et_alamat"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="Alamat"
                android:inputType="textCapWords"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_idkeluarga"/>

            <EditText
                android:id="@+id/et_kodepos"
                android:layout_width="370dp"
                android:layout_height="48dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shapebutton"
                android:hint="Kode Pos"
                android:inputType="number"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_alamat"/>

            <CheckBox
                android:id="@+id/checkbox_syarat"
                style="@android:style/Widget.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/white"
                android:minHeight="48dp"
                android:checked="true"
                android:text="Saya setuju dengan S&amp;K yang berlaku"
                app:layout_constraintTop_toBottomOf="@+id/et_kodepos"
                tools:layout_editor_absoluteX="222dp" />

            <Button
                android:id="@+id/btn_daftar_warga"
                android:layout_width="370dp"
                android:layout_height="54dp"
                android:layout_marginTop="31dp"
                android:background="@drawable/roundedbtn"
                android:fontFamily="@font/montserrat"
                android:text="Daftar"
                android:textAllCaps="false"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_syarat"/>



            <View
                android:id="@+id/view_line"
                android:layout_width="370dp"
                android:layout_height="3dp"
                android:layout_marginTop="96dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_daftar_warga" />

            <Button
                android:id="@+id/btn_login_warga"
                android:layout_width="370dp"
                android:layout_height="54dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/roundedbtn"
                android:fontFamily="@font/montserrat"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_line"
                app:layout_constraintVertical_bias="0.185"
                android:layout_marginBottom="100dp"/>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>