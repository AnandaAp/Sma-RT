<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/layoutInformasi">

    <androidx.cardview.widget.CardView
        android:id="@+id/informasi_card"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_infomasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_image"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/judul_informasi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Banjir di Jambu Ijo"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/informasi_card"
        app:layout_constraintTop_toTopOf="@+id/informasi_card" />

    <TextView
        android:id="@+id/desc_informasi"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Banjir di jambu ijo hingga saat ini telah merusak 46 rumah."
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/informasi_card"
        app:layout_constraintTop_toBottomOf="@+id/judul_informasi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#BE9D9D"
        app:layout_constraintTop_toBottomOf="@+id/informasi_card" />


</androidx.constraintlayout.widget.ConstraintLayout>